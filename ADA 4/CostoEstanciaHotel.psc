Algoritmo CostoEstanciaHotel
	
	//Definir variables
	Definir costoTotal como Real;
	Definir costoDia como Real;
	Definir dias como Real;
	
	//Entrada
	Escribir "Proporcione el numero de dias de su estancia";
	Leer dias;
	Escribir "Proporcione el costo por dia de estancia";
	Leer costoDia;
	
	//Proceso 
	
	costoTotal = costoDia * dias;
	
	//Salida
	Escribir "El costo total de la estancia es: $", costoTotal;
	
FinAlgoritmo
