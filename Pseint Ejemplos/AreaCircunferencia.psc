Algoritmo AreaCircunferencia
	
	//Definir Variables
	Definir radio como Real;
	Definir area como Real;
	//Entrada
	Escribir "Proporcione el radio de la circunferencia";
	Leer radio;
	
	//Proceso 
	area = PI * (radio*radio);
	
	//Salida
	Escribir "El area de la circunferencia es: ", area;
	Escribir pi;
	Escribir PI;
FinAlgoritmo
